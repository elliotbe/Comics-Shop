{
    "name": "yoyote/bd-shop",
    "description": "",
    "license": "MIT",
    "scripts": {
        "build-css": "stylus stylus/index.styl --out public/css/style.css --include-css --resolve-url --sourcemap --watch --resolve-url",
        "start": [
            "php extra/init-db.php",
            "php -S localhost:4000 -t public public/index.php"
        ]
    },
    "config": {
        "process-timeout": 0
    },
    "autoload": {
        "files": [
            "src/App.php",
            "src/helpers.php"
        ],
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require": {
        "phpmailer/phpmailer": "^6.0"
    },
    "require-dev": {
        "symfony/var-dumper": "^4.2",
        "filp/whoops": "^2.3"
    }
}
