html
  box-sizing: border-box
  +below(--small)
    font-size: 87.5%


*, *::before, *::after
  box-sizing: inherit


body
  margin: 0
  padding: 0
  font-family: 'Segoe UI', sans-serif
  line-height: 1.5
  min-height: 100vh
  display: flex
  flex-direction: column
  color: --dark-blue


.preload *
  transition: none !important


.hide
  display: none !important

img
  display: block


a
  color: inherit
  text-decoration: none


h2
  font-size: rem(36px)
  line-height: 1


h3
  font-size: rem(30px)
  line-height: 1


h1, h2, h3, h4,
h5, h6, p, hgroup
  &:first-child
    margin-top: 0

  &:last-child
    margin-bottom: 0


hgroup > *
  margin: 0


pre
  white-space: pre-wrap;
  z-index: 0 !important


.main
  responsivePadding()
  padding-top: --gap-l
  padding-bottom: --gap-l
  flex: 1 1 auto
  background:
    radial-gradient(lighten(--orange, 80%) 3px, transparent 4px),
    radial-gradient(lighten(--blue, 90%) 3px, transparent 4px),
    linear-gradient(#fff 4px, transparent 0),
    linear-gradient(45deg, transparent 74px, transparent 75px, lighten(--blue, 90%) 75px, lighten(--blue, 90%) 76px, transparent 77px, transparent 109px),
    linear-gradient(-45deg, transparent 75px, transparent 76px, lighten(--blue, 90%) 76px, lighten(--blue, 90%) 77px, transparent 78px, transparent 109px),
  #fff;
  background-size: 109px 109px, 109px 109px,100% 6px, 109px 109px, 109px 109px;
  background-position: 54px 55px, 0px 0px, 0px 0px, 0px 0px, 0px 0px;
