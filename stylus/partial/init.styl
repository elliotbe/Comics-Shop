html
  box-sizing: border-box
  +below(--small)
    font-size: 87.5%


*, *::before, *::after
  box-sizing: inherit


body
  margin: 0
  padding: 0
  font-family: 'Segoe UI', sans-serif
  line-height: 1.5
  min-height: 100vh
  display: flex
  flex-direction: column
  color: --dark-blue



a
  color: inherit
  text-decoration: none


h2
  font-size: rem(40px)


h3
  font-size: rem(32px)


h1, h2, h3, h4,
h5, h6, p, hgroup
  margin: --gutter-s 0

  +above(--small)
    margin: --gutter-m 0

  &:first-child
    margin-top: 0

  &:last-child
    margin-bottom: 0


hgroup > *
  margin: 0


.container
  max-width: --container-width
  margin: 0 auto
  // background-color: hsla(#f88, .3)


.product__container
  @extends $container-standard

.main
  responsivePadding()
  padding-top: --gutter-xl
  padding-bottom: @padding-top
  flex: 1 1 auto
  background:
    radial-gradient(hsla(--orange, .2) 3px, transparent 4px),
    radial-gradient(hsla(--blue, .2) 3px, transparent 4px),
    linear-gradient(#fff 4px, transparent 0),
    linear-gradient(45deg, transparent 74px, transparent 75px, hsla(--blue, .2) 75px, hsla(--blue, .2) 76px, transparent 77px, transparent 109px),
    linear-gradient(-45deg, transparent 75px, transparent 76px, hsla(--blue, .2) 76px, hsla(--blue, .2) 77px, transparent 78px, transparent 109px),
  #fff;
  background-size: 109px 109px, 109px 109px,100% 6px, 109px 109px, 109px 109px;
  background-position: 54px 55px, 0px 0px, 0px 0px, 0px 0px, 0px 0px;
